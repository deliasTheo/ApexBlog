{% extends 'baseUser.html.twig' %}

{% block title %}Hello in tags{% endblock %}

{% block body %}
    {% if app.request.method == 'POST' %}
        <div>
            {% if tags | length == 0 %}
                <h4>Aucun résulat pour votre recherche.</h4>
            {% else %}
                <h3 class="mt-3">Vos résulats de recherche :</h3>
                {% for tag in tags %}
                    <div class="mt-3 p-3 bg-light border rounded">
                        {% for video in tag.getVideos %}
                            <iframe class="video" width="300" height="300" src="{{ video.getLien }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                        {% endfor %}
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    {% endif %}
{% endblock %}